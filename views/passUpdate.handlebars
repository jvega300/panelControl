<section id="login" class="contact section has-pattern">
    <div class="container text-center">
        <div class="contact-inner">
            <h2 class="page-header">Cambiar contraseña</h2>
            {{#if msg_error}}
                <div class="alert alert-danger">{{msg_error}}</div>
            {{/if}}

            <form action="/passUpdate/{{user._id}}" method="post">
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" value="" name="password" placeholder="Contraseña">
                </div>
                <button type="submit" class="btn btn-default">Enviar</button>
                <input type="hidden" name="_method" value="put">

            </form>

        </div>
    </div>
</section>